<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/leto_white"
    android:orientation="vertical">

    <include layout="@layout/lebox_include_common_header" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/lebox_red_packet"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/leto_black_3"
        android:text="登录后"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预计本月可获得收益"
            android:textSize="14sp"
            android:textColor="@color/leto_black2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#F5A623"
            android:textStyle="bold"
            android:text="120.0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/leto_black2"
            android:text="元"/>

    </LinearLayout>

    <TextView
        android:id="@+id/sign_in_wechat"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/lebox_wechat_sign_in_btn_bg"
        android:layout_marginTop="27dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="登录领最高18元红包"
        android:drawableLeft="@mipmap/lebox_wechat"
        android:gravity="center"
        android:drawablePadding="10dp"
        android:paddingLeft="47dp"
        android:paddingRight="47dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="其他登录方式"
            android:textColor="#CCCCCC"
            android:textSize="12sp" />

        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="#EEEEEE" />

        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="#EEEEEE" />

    </LinearLayout>

    <TextView
        android:id="@+id/sign_in_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:drawableTop="@mipmap/lebox_mobile"
        android:drawablePadding="8dp"
        android:text="手机登录"
        android:textColor="@color/leto_text_lowgray"
        android:textSize="12sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/leto_text_lowgray"
            android:text="登录即代表您已阅读并同意"/>

        <TextView
            android:id="@+id/user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#3D9AF0"
            android:text="《用户协议》"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/leto_text_lowgray"
            android:text="及"/>

        <TextView
            android:id="@+id/privacy_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#3D9AF0"
            android:text="《隐私政策》"/>

    </LinearLayout>

</LinearLayout>
