<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipChildren="false"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:clipChildren="false"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E7EAEF" />

        <com.mgc.letobox.happy.view.MyRadioGroup
            android:id="@+id/tab_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:clipChildren="false"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/tab_minigame"
                style="@style/tabButtonStyle"
                android:drawableTop="@drawable/tab_home"
                android:text="首页" />

            <RadioButton
                android:id="@+id/tab_find"
                style="@style/tabButtonStyle"
                android:drawableTop="@drawable/tab_find"
                android:text="发现" />

            <RadioButton
                android:id="@+id/tab_game"
                style="@style/tabButtonStyle"
                android:drawableTop="@drawable/tab_game"
                android:text="小游戏" />

            <RadioButton
                android:id="@+id/tab_rank"
                style="@style/tabButtonStyle"
                android:drawableTop="@drawable/tab_rank"
                android:text="榜单" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clipChildren="false">

                <RadioButton
                    android:id="@+id/tab_reward"
                    style="@style/tabButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/tab_reward"
                    android:text="赚钱" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/lebox_tab_challenge_badge"
                    android:paddingLeft="7dp"
                    android:paddingTop="1dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="1dp"
                    android:text="赚钱"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clipChildren="false"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/tab_challenge"
                    style="@style/tabButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/tab_challenge"
                    android:text="竞技场" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="-10dp"
                    android:layout_marginRight="-3dp"
                    android:background="@drawable/lebox_tab_challenge_badge"
                    android:paddingLeft="7dp"
                    android:paddingTop="1dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="2dp"
                    android:text="赚钱"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

            </FrameLayout>

            <RadioButton
                android:id="@+id/tab_category"
                style="@style/tabButtonStyle"
                android:drawableTop="@drawable/tab_category"
                android:text="分类" />

            <RadioButton
                android:id="@+id/tab_me"
                style="@style/tabButtonStyle"
                android:drawableTop="@drawable/tab_me"
                android:text="我的" />


        </com.mgc.letobox.happy.view.MyRadioGroup>
    </LinearLayout>
</LinearLayout>
