        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="#fff2f2f2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</RelativeLayout>