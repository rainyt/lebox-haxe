<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorDisabled" />
            <corners android:radius="4dp" />
            <padding android:bottom="@dimen/dp_4" android:left="8dp" android:right="8dp" android:top="@dimen/dp_4" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorEnabled" />
            <corners android:radius="4dp" />
            <padding android:bottom="@dimen/dp_4" android:left="8dp" android:right="8dp" android:top="@dimen/dp_4" />
        </shape>
    </item>
</selector>