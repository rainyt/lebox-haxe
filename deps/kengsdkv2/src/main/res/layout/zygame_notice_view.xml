<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/zygame_dialog_bg2"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/zygame_testnullicon"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="公告"
            android:textColor="@color/black2"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/moregame_view_closebtu"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="@drawable/zygame_common_closebtn"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/notice_viewtips"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/zygame_tips"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/notice_listview_msg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/zygame_dialog_bg"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ListView
            android:id="@+id/notice_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="5"
            android:divider="@drawable/zygame_listview_divider2"
            android:dividerHeight="0.6dp"
            android:fadeScrollbars="false"
            android:listSelector="#00000000"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="10dp"
            android:scrollbarThumbVertical="@drawable/zygame_scrollbar_style"
            android:scrollbarTrackVertical="@drawable/zygame_listview_scrollbar"
            android:visibility="visible" >
        </ListView>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#e5e5e5" />

        <FrameLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/notice_textview"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/notice_textcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                android:text="史小坑游戏公告板内容吧啦吧啦"
                android:textColor="#000000"
                android:textSize="16sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/notice_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/zygame_loading"
                android:visibility="gone" />

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:overScrollMode="never"
                android:scrollbarFadeDuration="0"
                android:scrollbarSize="10dp"
                android:scrollbarThumbVertical="@drawable/zygame_scrollbar_style"
                android:scrollbarTrackVertical="@drawable/zygame_listview_scrollbar"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>