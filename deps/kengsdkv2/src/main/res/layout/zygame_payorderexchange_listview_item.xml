<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/payorder_listview_goodsmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/zygame_payorder_textbg"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/payorder_listview_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="描    述："
                android:textColor="#130000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/payorder_listview_msgmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="牛批哄哄炸天"
                android:textColor="#93851f"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/payorder_listview_mount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金    额："
                android:textColor="#130000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/payorder_listview_mountmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1元"
                android:textColor="#93851f"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/payorder_listview_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时    间："
                android:textColor="#130000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/payorder_listview_timetmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2019-05-08"
                android:textColor="#93851f"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/payorder_listview_orderid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="订单号："
                android:textColor="#130000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/payorder_listview_orderidmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="12345678910"
                android:textColor="#93851f"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/payorder_listview_button"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:background="@drawable/zygame_alert_dialog_right_selector_green"
        android:text="兑换"
        android:textColor="#ffffff"
        android:textSize="12dp" />

</LinearLayout>