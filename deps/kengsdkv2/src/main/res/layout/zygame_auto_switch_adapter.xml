<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <zygame.activitys.web.WebImageView
        android:id="@+id/web_swtich_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/zygame_testbg1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#88000000"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/web_swtich_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="123123123123123"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/web_switch_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:text="这个是描述内容描述描述啊"
            android:textColor="#ffffff"
            android:textSize="10dp" />
    </FrameLayout>

</FrameLayout>