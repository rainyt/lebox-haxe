<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/v2_zygame_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/v2_zygame_dialog_idauth_bg"
        android:gravity="center"
        android:text="消息"
        android:textColor="@color/white"
        android:textSize="38px" />

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"  android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" >
        
        <Button
            android:id="@+id/cannel"
            android:layout_width="110dp"
            android:layout_height="42dp"
            android:layout_margin="5dp"
            android:background="@drawable/v2_zygame_button_orange"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:visibility="visible" />

        <Button
            android:id="@+id/close"
            android:layout_width="110dp"
            android:layout_height="42dp"
            android:layout_margin="5dp"
            android:background="@drawable/v2_zygame_button_green"
            android:text="确定"
            android:textColor="#FFFFFF" />

    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/bottombox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

    </RelativeLayout>

</LinearLayout>