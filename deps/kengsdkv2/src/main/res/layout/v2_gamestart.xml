<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/startgame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/v2_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/v2_zygame_dialog_idauth_bg_000000"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/loginview_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" >

            <Button
                android:id="@+id/loginview_login"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/v2_zygame_button_green"
                android:textColor="#ffffff"
                android:text="登录游戏"
                android:textSize="13sp" />

            <Button
                android:id="@+id/loginview_exit"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:background="@drawable/v2_zygame_button_orange"
                android:textColor="#ffffff"
                android:text="退出游戏"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/startgame2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="15dp"
            android:text="- 点击屏幕开始游戏 -"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:text="我已详细阅读并同意"
                android:textColor="#ffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sxk_public"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:text="用户协议"
                android:textColor="#D78C30"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="和"
                android:textColor="#ffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sxk_private"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:text="隐私协议"
                android:textColor="#D78C30"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抵制不良游戏，拒绝盗版游戏。注意自我保护，谨防受骗上当。"
            android:textColor="#ffffff"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="适度游戏益脑，沉迷游戏伤身。合理安排游戏，享受健康生活。"
            android:textColor="#ffffff"
            android:textSize="8sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:text="@string/pzwh"
            android:textColor="#ffffff"
            android:textSize="8sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="@string/isbn"
                android:textColor="#ffffff"
                android:textSize="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="@string/www"
                android:textColor="#ffffff"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="@string/rzh"
                android:textColor="#ffffff"
                android:textSize="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="@string/zzr"
                android:textColor="#ffffff"
                android:textSize="8sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/cbdw"
            android:textColor="#ffffff"
            android:textSize="8sp" />
    </LinearLayout>

</RelativeLayout>