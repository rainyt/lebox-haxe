<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="为了使大家更好地平衡游戏与生活，合理安排"
        android:textColor="#4c4c4c"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="时间，落实国家新闻出版署"
            android:textColor="#4c4c4c"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fcmtz1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="《关于防止未成年"
            android:textColor="#2CBA9A"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fcmtz2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="人沉迷网络游戏的通知》"
            android:textColor="#2CBA9A"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="，请完成实名认证。"
            android:textColor="#4c4c4c"
            android:textSize="12sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/authid_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/zygame_dialog_edittext"
        android:cursorVisible="true"
        android:digits="1234567890X"
        android:hint="输入15或18位身份证号码"
        android:inputType="number"
        android:maxLength="18"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black2"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/authname_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/zygame_dialog_edittext"
        android:cursorVisible="true"
        android:hint="请输入姓名"
        android:maxLength="6"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black2"
        android:textSize="14sp" />

</LinearLayout>