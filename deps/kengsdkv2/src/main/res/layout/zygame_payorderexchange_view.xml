<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/zygame_dialog_bg2"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/zygame_testnullicon"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="订单列表"
            android:textColor="@color/black2"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/payorder_view_closebtu"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="@drawable/zygame_common_closebtn"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/payorder_viewtips"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/zygame_tips"
        android:visibility="gone" />
    
    <LinearLayout
        android:id="@+id/payorder_listviewlayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff"
        android:fitsSystemWindows="true"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/payorder_listview"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:divider="@drawable/zygame_listview_divider2"
            android:dividerHeight="0.6dp"
            android:fadeScrollbars="false"
            android:listSelector="#00000000"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="10dp"
            android:scrollbarThumbVertical="@drawable/zygame_scrollbar_style"
            android:scrollbarTrackVertical="@drawable/zygame_listview_scrollbar"
            android:visibility="visible" >
        </ListView>
    </LinearLayout>

</LinearLayout>