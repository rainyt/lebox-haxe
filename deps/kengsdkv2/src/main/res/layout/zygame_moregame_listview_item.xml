<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <zygame.activitys.web.WebImageView
        android:id="@+id/moregame_listview_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/zygame_testicon1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/moregame_listview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="这里是标题，吧啦吧啦"
            android:textColor="#130000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/moregame_listview_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="这里是介绍，噼里啪啦"
            android:textColor="#93851f"
            android:textSize="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/moregame_listview_button"
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/zygame_alert_dialog_right_selector_green"
        android:text="下载"
        android:textColor="#ffffff"
        android:textSize="12dp" />

</LinearLayout>