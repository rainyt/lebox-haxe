<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingBottom="15dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:gravity="center" >

        <CheckBox
            android:id="@+id/cheakbox"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/v2_zygame_button_cheakbox"
            android:button="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="已同意"
            android:textColor="#4D4D4D"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/userauthen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="用户协议"
            android:textColor="#2CBA9A"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="、"
            android:textColor="#4D4D4D"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/userauthen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="隐私协议"
            android:textColor="#2CBA9A"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomlabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     	android:gravity="left" android:paddingLeft="20dp"  android:paddingRight="20dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="*本实名认证服务由史小坑游戏向您提供，按照国家相关规定进行实名认证并存储，您确保已详细阅读并同意"
            android:textColor="#E06D6C"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="*实名认证后，启用未成年人防沉迷系统"
            android:textColor="#E06D6C"
            android:textSize="10sp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="*身份信息只能提交一次，不可修改，慎重填写"
            android:textColor="#E06D6C"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>